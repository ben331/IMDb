<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="Widget.IMDb.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.IMDb.Button.Secondary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.Button.Secondary</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ThemeOverlay.IMDb.Button.Secondary" parent="">
        <item name="colorPrimary">@color/gray_800</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.IMDb.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.IMDb.Caption</item>
    </style>

    <style name="Widget.IMDb.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.TextInputLayout</item>
        <item name="expandedHintEnabled">false</item>
    </style>
    <style name="ThemeOverlay.IMDb.TextInputLayout" parent="">
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <item name="android:textColorPrimary">@color/gray_500</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.IMDb.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.IMDb.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>