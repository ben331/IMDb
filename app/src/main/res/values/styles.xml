<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="Widget.IMDb.Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.Button.Primary</item>
    </style>
    <style name="ThemeOverlay.IMDb.Button.Primary" parent="">
        <item name="colorOnPrimary">@color/gray_800</item>
        <item name="textAppearanceButton">@style/TextAppearance.IMDb.Button.Primary</item>
    </style>

    <style name="Widget.IMDb.Button.Secondary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.Button.Secondary</item>
        <item name="android:enabled">false</item>
        <item name="paddingEnd">@dimen/padding_large</item>
        <item name="paddingStart">@dimen/padding_large</item>
    </style>
    <style name="ThemeOverlay.IMDb.Button.Secondary" parent="">
        <item name="colorPrimary">@color/gray_800</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textAppearanceButton">@style/TextAppearance.IMDb.Button.Secondary</item>
    </style>

    <style name="Widget.IMDb.TextInputLayout.Signup" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.TextInputLayout.SignUp</item>
        <item name="expandedHintEnabled">false</item>
    </style>
    <style name="ThemeOverlay.IMDb.TextInputLayout.SignUp" parent="">
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <item name="android:textColorPrimary">@color/gray_500</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.IMDb.TextField.SignUp</item>
        <item name="textAppearanceCaption">@style/TextAppearance.IMDb.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Widget.IMDb.TextInputLayout.Login" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ic_editext_login_background</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/roboto_light_italic</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

</resources>